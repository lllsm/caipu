.list {
    padding: 35rpx 50rpx 134rpx 50rpx;
}

.comment-list {
    height: auto;
    padding-bottom: 69rpx;
}

.comment-user-info {
    width: auto;
}

.comment-user {
    display: flex;
    float: left;
}

.comment-user-avatar {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50rpx;
}

.comment-user-name {
    padding: 0 0 0 20rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #999999;
    line-height: 42rpx;
}

.comment-digg {
    padding: 0 0 25rpx 50rpx;
    display: flex;
    float: right;
}

.comment-digg-img {
    width: 31rpx;
    height: 32rpx;
}

.comment-digg-num {
    padding-left: 13rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #666666;
    line-height: 37rpx;
}

.ccomment-digg-null {
    padding-left: 25rpx;
}

.clearfix {
    clear: both;
}

.comment-content {
    padding: 25rpx 0 0 49rpx;
    font-size: 34rpx;
    font-weight: 400;
    color: #000000;
    line-height: 48rpx;
}

.comment-time {
    padding: 24rpx 0 0 49rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #999999;
    line-height: 37rpx;
}

.comment-null-img {
    width: 310rpx;
    height: 256rpx;
    padding: 412rpx 170rpx;
}

.comment-button {
    width: 650rpx;
    padding-bottom: 62rpx;
    position: fixed;
    bottom: 0;
}

.add-comment {
    width: 326rpx;
    padding: 0 162rpx;
    z-index: 99;
}

.comment-but {
    width: 326rpx;
    height: 100rpx;
    background: #FFFFFF;
    box-shadow: 0 5rpx 20rpx 0 #D0D2D6;
    border-radius: 50rpx;
}

.but-title {
    width: 161rpx;
    height: 42rpx;
    display: flex;
    padding: 25rpx 70rpx 40rpx 95rpx;
}

.release-img {
    width: 31rpx;
    height: 31rpx;
    padding-top: 7rpx;
}

.comment-but-title {
    width: 130rpx;
    height: 42rpx;
    font-size: 30rpx;
    text-align: center;
    padding-top: 3rpx;
    font-weight: 400;
    color: #666666;
    line-height: 42rpx;
}

.comment-digg-select {
    padding-left: 13rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #E30012;
    line-height: 37rpx;
}

.floar-clear {
    clear: both;
}

.button-gradually-hide {
    animation: 500ms but-hide 0s infinite;
    animation-iteration-count: 1;
}

@-webkit-keyframes but-hide {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

@keyframes but-hide {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

.comment-but-hide {
    display: none;
}

.button-gradually-show {
    animation: 1s but-show 0s infinite;
    animation-iteration-count: 1;
}

@-webkit-keyframes but-show {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes but-show {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.add-comment-text {
    height: 890rpx;
    background: #F7F7F7;
    border-radius: 25rpx 25rpx 0px 0px;
    position: fixed;
    bottom: 0;
}

.add-comment-hide {
    display: none;
}

.add-comment-show {
    display: block;
}

.comment-buyt-but {
    padding: 35rpx 30rpx 0 30rpx;
}

.comment-cancel {
    width: auto;
    font-size: 32rpx;
    font-weight: 400;
    color: #333333;
    line-height: 45rpx;
    float: left;
}

.comment-release {
    float: right;
}

.comment-text {
    width: 690rpx;
    height: 135rpx;
    background: #FFFFFF;
    border-radius: 8rpx;
    margin: 40rpx 30rpx 30rpx 30rpx;
}

.comment-text-content {
    width: 635rpx;
    height: 108rpx;
    background: #FFFFFF;
    border-radius: 8rpx;
    padding: 22rpx 23rpx 0 32rpx;
}