.segment {
    height: auto;
}

.food-title-first {
    padding: 31rpx 0 61rpx 48rpx;
}

.first-title {
    font-size: 48rpx;
    font-weight: 500;
    color: #000000;
    line-height: 67rpx;
}

.food-title-second {
    padding: 0 0 0 47rpx;
    border-bottom: 1px solid #EEEEEE;
}

.second-title {
    font-size: 38rpx;
    font-weight: 400;
    color: #000000;
    line-height: 53rpx;
    border-bottom: 3rpx solid #D42C1F;
    display: table;
}

.food-segment {
    display: flex;
    flex-wrap: wrap;
    padding: 0 2rpx 100rpx 2rpx;
}

.food-segment-default {
    width: 120rpx;
    height: 141rpx;
    padding: 54rpx 33rpx 0 33rpx;
    text-align: center;
}

.food-segment-hide {
    width: 120rpx;
    height: 141rpx;
    padding: 54rpx 33rpx 0 33rpx;
    text-align: center;
    display: none;
}

.food-segment-show {
    width: 120rpx;
    height: 141rpx;
    padding: 54rpx 33rpx 0 33rpx;
    text-align: center;
}

.food-cover {
    width: 88rpx;
    height: 88rpx;
    background: #D8D8D8;
    border-radius: 50rpx;
}

.food-name {
    font-size: 26rpx;
    font-weight: 400;
    color: #000000;
    line-height: 37rpx;
    text-align: center;
    padding-top: 16rpx;
}

.expand-segment {
    width: 650rpx;
    height: 78rpx;
    padding: 0 50rpx 0 50rpx;
    margin-top: -20rpx;
    z-index: 2;
}

.expand {
    width: auto;
    height: 50rpx;
    display: flex;
    float: right;
    padding-top: 20rpx;
}

.expand-img {
    width: 30rpx;
    height: 30rpx;
    padding: 10rpx 20rpx 0 0;
}

.expand-title {
    font-size: 32rpx;
    padding-right: 10rpx;
}

.null-data {
    text-align: center;
}

.null-data-img {
    width: 158rpx;
    height: 158rpx;
    padding: 450rpx 0 30rpx 0;
}

.null-data-title {
    font-size: 30rpx;
    font-weight: 400;
    color: #999999;
    line-height: 42rpx;
}